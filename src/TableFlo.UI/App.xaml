<Application x:Class="TableFlo.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TableFlo.UI.Converters"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxes.xaml"/>
                <ResourceDictionary Source="Styles/DataGrids.xaml"/>
                <ResourceDictionary Source="Styles/ComboBoxes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <local:BoolToStringConverter x:Key="BoolToStringConverter"/>
            <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

