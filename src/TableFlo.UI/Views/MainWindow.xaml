<Window x:Class="TableFlo.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TableFlo - Dealer Rotation Management" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundDarkBrush}"
                BorderBrush="{StaticResource LineBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Assets/tabflowlogo.png" 
                           Width="40" Height="40" 
                           Margin="0,0,15,0"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="TableFlo" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Navigation -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="DashboardButton"
                            Content="Dashboard" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ShowDashboard_Click"
                            Margin="5,0"/>
                    <Button x:Name="DealersButton"
                            Content="Dealers" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ShowDealers_Click"
                            Margin="5,0"/>
                    <Button x:Name="TablesButton"
                            Content="Tables" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ShowTables_Click"
                            Margin="5,0"/>
                    <Button x:Name="AnalyticsButton"
                            Content="Analytics" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ShowAnalytics_Click"
                            Margin="5,0"/>
                </StackPanel>                
                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="UserInfoText"
                               FontSize="14" 
                               Foreground="{StaticResource TextMutedBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Button Content="Logout" 
                            Style="{StaticResource SecondaryButton}"
                            Click="Logout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Dashboard View (3-Section Layout) -->
            <Grid x:Name="DashboardView" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Section 1: Current Dealers -->
                <Border Grid.Column="0" 
                        Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="14,12">
                            <TextBlock Text="Section 1 â€” Tables (Current Dealer)" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <DataGrid x:Name="CurrentDealersGrid"
                                      ItemsSource="{Binding CurrentTables}"
                                      Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      Margin="10"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Game" Binding="{Binding GameType}" Width="100"/>
                                    <DataGridTextColumn Header="Current Dealer" Binding="{Binding CurrentDealerName}" Width="*"/>
                                    <DataGridTextColumn Header="Time" Binding="{Binding TimeInMinutes}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Generate AI Schedule" 
                                        Command="{Binding GenerateScheduleCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="5"/>
                                <Button Content="Refresh" 
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Section 2: Next Dealers -->
                <Border Grid.Column="2" 
                        Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="14,12">
                            <TextBlock Text="Section 2 â€” Breaking Dealer (Next Push)" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <DataGrid x:Name="NextDealersGrid"
                                      ItemsSource="{Binding NextTables}"
                                      Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      Margin="10"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Next Dealer" Binding="{Binding NextDealerName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="10">
                            <Button Content="Push All Tables" 
                                    Command="{Binding PushAllTablesCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    HorizontalAlignment="Right"
                                    Margin="5"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Section 3: On Break -->
                <Border Grid.Column="4" 
                        Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="14,12">
                            <TextBlock Text="Section 3 â€” On Break" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="BreakListControl" 
                                          ItemsSource="{Binding DealersOnBreak}"
                                          Margin="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1B2633" 
                                                BorderBrush="{StaticResource LineBrush}"
                                                BorderThickness="1"
                                                CornerRadius="999"
                                                Padding="10,6"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding DealerName}" 
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontSize="12"
                                                           VerticalAlignment="Center"/>
                                                <Button Grid.Column="1" 
                                                        Content="Ã—"
                                                        Command="{Binding DataContext.ReturnFromBreakCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding DealerId}"
                                                        Style="{StaticResource SecondaryButton}"
                                                        Padding="6,2"
                                                        FontSize="11"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="10">
                            <StackPanel>
                                <TextBox x:Name="NewBreakDealerTextBox"
                                         Text="{Binding NewBreakDealerNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,8"/>
                                <Button Content="Send to Break" 
                                        Command="{Binding SendToBreakCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Dealers View (REAL FUNCTIONALITY) -->
            <Grid x:Name="DealersView" Margin="20" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Dealers List -->
                <Border Grid.Column="0"
                        Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="14,12">
                            <Grid>
                                <TextBlock Text="Dealer Management" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="âž• Add Dealer"
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding AddDealerCommand}"
                                            Margin="0,0,10,0"/>
                                    <Button Content="ðŸ”„ Refresh"
                                            Style="{StaticResource SecondaryButton}"
                                            Command="{Binding RefreshCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Dealers DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Dealers}"
                                  SelectedItem="{Binding SelectedDealer}"
                                  Style="{StaticResource ModernDataGrid}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  Margin="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Emp #" Binding="{Binding EmployeeNumber}" Width="80"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Seniority" Binding="{Binding SeniorityLevel}" Width="80"/>
                                <DataGridTextColumn Header="Pit" Binding="{Binding PreferredPit}" Width="100"/>
                                <DataGridTextColumn Header="Shift" Binding="{Binding ShiftStart}" Width="70"/>
                                <DataGridTextColumn Header="Certifications" Binding="{Binding Certifications}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Edit Panel -->
                <Border Grid.Column="2"
                        Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Show when editing -->
                            <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="{Binding IsNewDealer, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Add New Dealer|Edit Dealer'}" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,20"/>
                                
                                <!-- Employee Number -->
                                <TextBlock Text="Employee Number *" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding EmployeeNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         IsEnabled="{Binding IsNewDealer}"
                                         Margin="0,0,0,15"/>
                                
                                <!-- First Name -->
                                <TextBlock Text="First Name *" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,15"/>
                                
                                <!-- Last Name -->
                                <TextBlock Text="Last Name *" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,15"/>
                                
                                <!-- Password (only for new) -->
                                <StackPanel Visibility="{Binding IsNewDealer, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Password *" 
                                               FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,0,0,5"/>
                                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             Margin="0,0,0,15"/>
                                </StackPanel>
                                
                                <!-- Seniority -->
                                <TextBlock Text="Seniority Level" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SeniorityLevel, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,15"/>
                                
                                <!-- Preferred Pit -->
                                <TextBlock Text="Preferred Pit" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding PreferredPit, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,15"/>
                                
                                <!-- Certifications -->
                                <TextBlock Text="Certifications" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,10,0,10"/>
                                
                                <CheckBox Content="Blackjack" 
                                          IsChecked="{Binding HasBlackjack}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Roulette" 
                                          IsChecked="{Binding HasRoulette}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Craps" 
                                          IsChecked="{Binding HasCraps}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Pai Gow" 
                                          IsChecked="{Binding HasPaiGow}"
                                          Margin="0,0,0,8"/>
                                <CheckBox Content="Baccarat" 
                                          IsChecked="{Binding HasBaccarat}"
                                          Margin="0,0,0,20"/>
                                
                                <!-- Action Buttons -->
                                <Button Content="ðŸ’¾ Save"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding SaveDealerCommand}"
                                        Margin="0,0,0,10"/>
                                <Button Content="âœ– Cancel"
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding CancelEditCommand}"/>
                            </StackPanel>
                            
                            <!-- Show when not editing -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="Dealer Actions" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,20"/>
                                
                                <Button Content="âœï¸ Edit Selected"
                                        Style="{StaticResource PrimaryButton}"
                                        Command="{Binding EditDealerCommand}"
                                        Margin="0,0,0,10"/>
                                <Button Content="ðŸ—‘ï¸ Delete Selected"
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding DeleteDealerCommand}"/>
                                
                                <TextBlock Text="Select a dealer from the list to edit or delete."
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,20,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
            
            <!-- Tables View -->
            <Grid x:Name="TablesView" Margin="20" Visibility="Collapsed">
                <Border Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="20,15">
                            <Grid>
                                <TextBlock Text="Table Management" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Refresh"
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <!-- Tables Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <DataGrid ItemsSource="{Binding Tables}"
                                      SelectedItem="{Binding SelectedTable}"
                                      Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      Margin="20"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Table #" Binding="{Binding TableNumber}" Width="100"/>
                                    <DataGridTextColumn Header="Game" Binding="{Binding GameType}" Width="150"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                                    <DataGridTextColumn Header="Min Bet" Binding="{Binding MinBet, StringFormat=C}" Width="100"/>
                                    <DataGridTextColumn Header="Max Bet" Binding="{Binding MaxBet, StringFormat=C}" Width="100"/>
                                    <DataGridTextColumn Header="Pit" Binding="{Binding PitLocation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <!-- Action Buttons -->
                        <Border Grid.Row="2"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,1,0,0"
                                Padding="20,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Open Table"
                                        Command="{Binding OpenTableCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="5"/>
                                <Button Content="Close Table"
                                        Command="{Binding CloseTableCommand}"
                                        Style="{StaticResource DangerButton}"
                                        Margin="5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Analytics View -->
            <Grid x:Name="AnalyticsView" Margin="20" Visibility="Collapsed">
                <Border Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="20,15">
                            <Grid>
                                <TextBlock Text="Analytics Dashboard" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Refresh"
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <!-- Stats Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="40">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Dealer Stats -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,40">
                                    <TextBlock Text="Dealer Statistics" 
                                               FontSize="22" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#171E26" CornerRadius="10" Padding="30" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="Total Dealers" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding TotalDealers}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGoldBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Background="#171E26" CornerRadius="10" Padding="30" Margin="5,0">
                                            <StackPanel>
                                                <TextBlock Text="Currently Dealing" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding ActiveDealers}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#10B981"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="2" Background="#171E26" CornerRadius="10" Padding="30" Margin="10,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="On Break" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding DealersOnBreak}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#F59E0B"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Table Stats -->
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Table Statistics" 
                                               FontSize="22" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#171E26" CornerRadius="10" Padding="30" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="Total Tables" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding TotalTables}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGoldBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Background="#171E26" CornerRadius="10" Padding="30" Margin="10,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Currently Open" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding OpenTables}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#10B981"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

