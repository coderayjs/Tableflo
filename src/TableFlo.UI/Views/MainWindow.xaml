                                          IsChecked="{Binding IsHighLimit}"
                                          Foreground="{StaticResource TextPrimaryBrush}"
                                          FontSize="12"
                                          Margin="0,0,0,15"/>
                                
                                <!-- Required Dealer Count -->
                                <TextBlock Text="Required Dealer Count *" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="RequiredDealerCountTextBox"
                                         Text="{Binding RequiredDealerCount, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="IntegerTextBox_PreviewTextInput"
                                         Margin="0,0,0,15"/>
                                
                                <!-- Push Interval -->
                                <TextBlock Text="Push Interval (Minutes) *" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="PushIntervalTextBox"
                                         Text="{Binding PushIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         PreviewTextInput="IntegerTextBox_PreviewTextInput"
                                         Margin="0,0,0,20"/>
                                
                                <!-- Loading Indicator -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,10"
                                            Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Saving..." 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                                    <ProgressBar IsIndeterminate="True" 
                                                 Width="100" 
                                                 Height="4"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                    <Button Content="âœ“ Save (Ctrl+S)"
                                            Command="{Binding SaveTableCommand}"
                                            Style="{StaticResource PrimaryButton}"
                                            IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"
                                            Margin="0,0,10,0"/>
                                    <Button Content="âœ– Cancel (Esc)"
                                            Command="{Binding CancelEditCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBoolConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- View Mode (when not editing) -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                
                                <TextBlock Text="Table Details" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Select a table from the list to view or edit details."
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
            
            <!-- Analytics View -->
            <Grid x:Name="AnalyticsView" Margin="20" Visibility="Collapsed">
                <Border Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="20,15">
                            <Grid>
                        <TextBlock Text="Analytics Dashboard" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Refresh"
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <!-- Stats Grid -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="40">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Dealer Stats -->
                                <StackPanel Grid.Row="0" Margin="0,0,0,40">
                                    <TextBlock Text="Dealer Statistics" 
                                               FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                               Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#171E26" CornerRadius="10" Padding="30" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="Total Dealers" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding TotalDealers}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGoldBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Background="#171E26" CornerRadius="10" Padding="30" Margin="5,0">
                                            <StackPanel>
                                                <TextBlock Text="Currently Dealing" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                   Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding ActiveDealers}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#10B981"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="2" Background="#171E26" CornerRadius="10" Padding="30" Margin="10,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="On Break" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding DealersOnBreak}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#F59E0B"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Table Stats -->
                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Table Statistics" 
                                               FontSize="22" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#171E26" CornerRadius="10" Padding="30" Margin="0,0,10,0">
                                            <StackPanel>
                                                <TextBlock Text="Total Tables" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding TotalTables}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGoldBrush}"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <Border Grid.Column="1" Background="#171E26" CornerRadius="10" Padding="30" Margin="10,0,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Currently Open" 
                                                           FontSize="14" 
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding OpenTables}" 
                                                           FontSize="48" 
                                                           FontWeight="Bold"
                                                           Foreground="#10B981"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                    </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Settings View -->
            <Grid x:Name="SettingsView" Margin="20" Visibility="Collapsed">
                <Border Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Border Grid.Row="0"
                                BorderBrush="{StaticResource LineBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="20,15">
                            <Grid>
                                <TextBlock Text="System Settings" 
                                           FontSize="18" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <Button Content="Refresh"
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                        
                        <!-- Settings Form -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="40" MaxWidth="600">
                                <TextBlock Text="Rotation Settings" 
                                           FontSize="22" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,30"/>
                                
                                <!-- Break Interval -->
                                <TextBlock Text="Break Interval (minutes)" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding BreakIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,25"/>
                                
                                <!-- Push Interval -->
                                <TextBlock Text="Push Interval (minutes)" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding PushIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,25"/>
                                
                                <!-- Meal Deadline -->
                                <TextBlock Text="Meal Deadline (hours)" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding MealDeadlineHours, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,0,30"/>
                                
                                <Button Content="ðŸ’¾ Save Settings"
                                        Command="{Binding SaveSettingsCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        HorizontalAlignment="Left"
                                        Padding="20,10"/>
                                
                                <TextBlock Text="{Binding StatusMessage}" 
                                           FontSize="12" 
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,15,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>

