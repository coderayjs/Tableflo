<Window x:Class="TableFlo.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TableFlo - Dealer Rotation Management" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowState="Maximized">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Modern Sidebar -->
        <Border Grid.Column="0"
                Background="#0A0E14"
                BorderBrush="{StaticResource LineBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo Section -->
                <Border Grid.Row="0"
                        Padding="20,25"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/tabflowlogo.png" 
                               Width="36" Height="36" 
                               Margin="0,0,12,0"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TableFlo" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Casino Management" 
                                       FontSize="10" 
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="12,20">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button x:Name="DashboardButton"
                                Click="ShowDashboard_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Dealers -->
                        <Button x:Name="DealersButton"
                                Click="ShowDealers_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘¥" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Dealers" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Strings -->
                        <Button x:Name="StringsButton"
                                Click="ShowStrings_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”„" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Rotation Strings" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Tables -->
                        <Button x:Name="TablesButton"
                                Click="ShowTables_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ°" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Tables" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Analytics -->
                        <Button x:Name="AnalyticsButton"
                                Click="ShowAnalytics_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ˆ" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Analytics" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Settings -->
                        <Button x:Name="SettingsButton"
                                Click="ShowSettings_Click"
                                Style="{StaticResource SidebarNavButton}"
                                Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš™ï¸" FontSize="18" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- User Section (Bottom) -->
                <Border Grid.Row="2"
                        Background="#0F1419"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="20,15">
                    <StackPanel>
                        <TextBlock x:Name="UserInfoText"
                                   FontSize="12" 
                                   Foreground="{StaticResource TextMutedBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>
                        <Button Content="ðŸšª Logout" 
                                Click="Logout_Click"
                                Style="{StaticResource SidebarNavButton}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Dashboard View (3-Section Layout) -->
            <Grid x:Name="DashboardView" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Professional Stats Cards -->
                <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,20">
                    <!-- Available Dealers Card -->
                    <Border Margin="0,0,10,0"
                            Background="#0F1A24"
                            BorderBrush="#1A2A3A"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#10B98120"
                                        CornerRadius="6"
                                        Padding="8"
                                        Width="36"
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="ðŸ‘¥" 
                                               FontSize="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="AVAILABLE" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="Dealers" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding AvailableDealers}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#10B981"
                                       Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Currently Dealing Card -->
                    <Border Margin="5,0,5,0"
                            Background="#0F1A24"
                            BorderBrush="#1A2A3A"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#C96B2C20"
                                        CornerRadius="6"
                                        Padding="8"
                                        Width="36"
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽ°" 
                                               FontSize="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="CURRENTLY" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="Dealing" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding DealingCount}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource AccentOrangeBrush}"
                                       Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- On Break Card -->
                    <Border Margin="5,0,5,0"
                            Background="#0F1A24"
                            BorderBrush="#1A2A3A"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#F59E0B20"
                                        CornerRadius="6"
                                        Padding="8"
                                        Width="36"
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="â¸ï¸" 
                                               FontSize="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="ON" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="Break" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding DealersOnBreak.Count}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#F59E0B"
                                       Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Relief Needed Card -->
                    <Border Margin="10,0,0,0"
                            Background="#0F1A24"
                            BorderBrush="#1A2A3A"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                                <Border Background="#DC262620"
                                        CornerRadius="6"
                                        Padding="8"
                                        Width="36"
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="ðŸ†˜" 
                                               FontSize="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="RELIEF" 
                                               FontSize="11" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                    <TextBlock Text="Needed" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding ReliefNeeded}" 
                                       FontSize="36" 
                                       FontWeight="Bold"
                                       Foreground="#DC2626"
                                       Margin="0,4,0,0"/>
                        </Grid>
                    </Border>
                </UniformGrid>
                
                <!-- Main 4-Section Grid -->
                <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Section 1: Current Dealers -->
                <Border Grid.Column="0" 
                        Background="#0F1A24"
                        BorderBrush="#1A2A3A"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,0,0,1"
                                Padding="20,16"
                                Background="#0A1219">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#C96B2C30"
                                            CornerRadius="8"
                                            Padding="10,8"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="ðŸ“Š" 
                                                   FontSize="20"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Current Dealers" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Active table assignments" 
                                                   FontSize="11" 
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <DataGrid x:Name="CurrentDealersGrid"
                                      ItemsSource="{Binding CurrentTables}"
                                      SelectedItem="{Binding SelectedCurrentTable}"
                                      Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      Margin="10"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ðŸ”„ Push This Table" 
                                                  Command="{Binding PushSingleTableCommand}"
                                                  CommandParameter="{Binding SelectedCurrentTable.TableId}"/>
                                        <MenuItem Header="ðŸ  Send Dealer Home" 
                                                  Command="{Binding SendDealerHomeCommand}"
                                                  CommandParameter="{Binding SelectedCurrentTable.CurrentDealerId}"/>
                                        <Separator/>
                                        <MenuItem Header="â¸ï¸ Send to Break" 
                                                  Command="{Binding SendToBreakCommand}"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="" Width="40" CanUserResize="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="âœ“" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentOrangeBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Game" Binding="{Binding GameType}" Width="100"/>
                                    <DataGridTextColumn Header="Current Dealer" Binding="{Binding CurrentDealerName}" Width="*"/>
                                    <DataGridTextColumn Header="Time" Binding="{Binding TimeInMinutes}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,1,0,0"
                                Padding="16,14"
                                Background="#0A1219">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="ðŸ¤– Generate Schedule" 
                                        Command="{Binding GenerateScheduleCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,8,0"
                                        Padding="16,10"
                                        FontSize="13"/>
                                <Button Content="ðŸ“¥ Export" 
                                        Command="{Binding ExportScheduleCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,8,0"
                                        Padding="16,10"
                                        FontSize="13"/>
                                <Button Content="ðŸ”„ Refresh" 
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Padding="16,10"
                                        FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Section 2: Next Dealers -->
                <Border Grid.Column="2" 
                        Background="#0F1A24"
                        BorderBrush="#1A2A3A"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,0,0,1"
                                Padding="20,16"
                                Background="#0A1219">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#D4A57430"
                                        CornerRadius="8"
                                        Padding="10,8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="â­ï¸" 
                                               FontSize="20"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Next Dealers" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Scheduled rotations" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <DataGrid x:Name="NextDealersGrid"
                                      ItemsSource="{Binding NextTables}"
                                      Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      Margin="10"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="" Width="40" CanUserResize="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="âœ“" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource AccentOrangeBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Next Dealer" Binding="{Binding NextDealerName}" Width="*"/>
                                    <DataGridTextColumn Header="Replacing" Binding="{Binding ReplacingDealerName}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,1,0,0"
                                Padding="16,14"
                                Background="#0A1219">
                            <Button Content="â–¶ï¸ Push All Tables" 
                                    Command="{Binding PushAllTablesCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    HorizontalAlignment="Stretch"
                                    Padding="16,10"
                                    FontSize="13"
                                    FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Section 3: On Break -->
                <Border Grid.Column="4" 
                        Background="#0F1A24"
                        BorderBrush="#1A2A3A"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,0,0,1"
                                Padding="20,16"
                                Background="#0A1219">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#F59E0B30"
                                        CornerRadius="8"
                                        Padding="10,8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="â¸ï¸" 
                                               FontSize="20"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="On Break" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding DealersOnBreak.Count, StringFormat='{}{0} dealers'}" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="BreakListControl" 
                                          ItemsSource="{Binding DealersOnBreak}"
                                          Margin="12,12">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#0A1219" 
                                                BorderBrush="#1A2A3A"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="12,10"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"
                                                        Background="#F59E0B20"
                                                        CornerRadius="6"
                                                        Width="32"
                                                        Height="32"
                                                        Margin="0,0,10,0"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="â¸ï¸" 
                                                               FontSize="14"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DealerName}" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               FontSize="13"
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding EmployeeNumber, StringFormat='#{0}'}" 
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               FontSize="11"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <Button Grid.Column="2" 
                                                        Content="â†©ï¸ Return" 
                                                        Command="{Binding DataContext.ReturnFromBreakCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding DealerId}"
                                                        Style="{StaticResource SecondaryButton}"
                                                        Padding="10,6"
                                                        FontSize="11"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <Border Grid.Row="2" 
                                BorderBrush="#1A2A3A"
                                BorderThickness="0,1,0,0"
                                Padding="16,14"
                                Background="#0A1219">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <TextBox x:Name="NewBreakDealerTextBox"
                                             Text="{Binding NewBreakDealerNumber, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             Padding="12,8"
                                             FontSize="13"
                                             Height="38"
                                             CornerRadius="8"/>
                                    <TextBlock Text="Dealer employee #"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=NewBreakDealerTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Text, ElementName=NewBreakDealerTextBox}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <Button Content="â¸ï¸ Send to Break" 
                                        Command="{Binding SendToBreakCommand}"
                                        Style="{StaticResource PrimaryButton}"
                                        HorizontalAlignment="Stretch"
                                        Padding="16,10"
                                        FontSize="13"
                                        FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Section 4: Rotation Strings -->
                <Border Grid.Column="6" 
                        Background="#0F1A24"
                        BorderBrush="#1A2A3A"
                        BorderThickness="1"
                        CornerRadius="16">
                    <Grid>
