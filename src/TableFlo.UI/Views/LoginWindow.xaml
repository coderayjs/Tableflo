<Window x:Class="TableFlo.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TableFlo.UI.ViewModels"
        mc:Ignorable="d"
        Title="TableFlo - Login" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDarkBrush}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Side - Branding -->
        <Grid Grid.Column="0" Background="{StaticResource BackgroundPanelBrush}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo Placeholder -->
                <Ellipse Width="120" Height="120" 
                         Fill="{StaticResource AccentGoldBrush}"
                         Margin="0,0,0,30"/>
                
                <TextBlock Text="TableFlo" 
                           FontSize="48" 
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentGoldBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="The Casino Workforce" 
                           FontSize="18" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Automation Engine" 
                           FontSize="18" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <TextBlock Text="AI-powered dealer rotations, break scheduling," 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="300"/>
                
                <TextBlock Text="skill tracking, and real-time compliance —" 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="300"/>
                
                <TextBlock Text="built specifically for casinos." 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           MaxWidth="300"/>
            </StackPanel>
        </Grid>
        
        <!-- Right Side - Login Form -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundDarkBrush}">
            <!-- Close Button -->
            <Button Content="×" 
                    Width="40" Height="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    FontSize="24"
                    Background="Transparent"
                    Foreground="{StaticResource TextMutedBrush}"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <StackPanel VerticalAlignment="Center" Margin="50,0">
                <TextBlock Text="Welcome Back" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Sign in to continue" 
                           FontSize="14" 
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,0,0,40"/>
                
                <!-- Employee Number -->
                <TextBlock Text="Employee Number" 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,0,0,8"/>
                
                <TextBox Text="{Binding EmployeeNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Height="45"
                         Margin="0,0,0,20"/>
                
                <!-- Password (Simplified for demo) -->
                <TextBlock Text="Password" 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,0,0,8"/>
                
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}"
                             Height="45"
                             Margin="0,0,0,30"/>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="13"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Login Button -->
                <Button Content="Sign In" 
                        Click="SignIn_Click"
                        Style="{StaticResource PrimaryButton}"
                        Height="50"
                        FontSize="16"
                        Margin="0,0,0,20"/>
                
                <!-- Loading Indicator -->
                <TextBlock Text="Signing in..." 
                           FontSize="13" 
                           Foreground="{StaticResource TextMutedBrush}"
                           HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
                <!-- Demo Info -->
                <Border Background="{StaticResource BackgroundPanelBrush}"
                        BorderBrush="{StaticResource LineBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Demo Credentials" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentGoldBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Employee #: ADMIN001" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="Password: admin123" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextMutedBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

