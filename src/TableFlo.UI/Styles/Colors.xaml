<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- TableFlo Brand Colors -->
    
    <!-- Dark Backgrounds -->
    <Color x:Key="BackgroundDark">#0F1419</Color>
    <Color x:Key="BackgroundPanel">#171E26</Color>
    <Color x:Key="BackgroundHover">#1D2733</Color>
    <Color x:Key="BackgroundInput">#0E1217</Color>
    
    <!-- Lines and Borders -->
    <Color x:Key="LineColor">#273242</Color>
    <Color x:Key="BorderColor">#2E4661</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#E6EDF3</Color>
    <Color x:Key="TextMuted">#9FB0C0</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentGold">#D4A574</Color>
    <Color x:Key="AccentGoldHover">#E5B685</Color>
    <Color x:Key="AccentOrange">#C96B2C</Color>
    <Color x:Key="AccentOrangeHover">#DA7C3D</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessGreen">#2EA043</Color>
    <Color x:Key="WarningYellow">#D29922</Color>
    <Color x:Key="ErrorRed">#F85149</Color>
    <Color x:Key="InfoBlue">#58A6FF</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundPanelBrush" Color="{StaticResource BackgroundPanel}"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{StaticResource BackgroundHover}"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="{StaticResource BackgroundInput}"/>
    
    <SolidColorBrush x:Key="LineBrush" Color="{StaticResource LineColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    
    <SolidColorBrush x:Key="AccentGoldBrush" Color="{StaticResource AccentGold}"/>
    <SolidColorBrush x:Key="AccentGoldHoverBrush" Color="{StaticResource AccentGoldHover}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
    <SolidColorBrush x:Key="AccentOrangeHoverBrush" Color="{StaticResource AccentOrangeHover}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningYellow}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRed}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoBlue}"/>
    
</ResourceDictionary>

